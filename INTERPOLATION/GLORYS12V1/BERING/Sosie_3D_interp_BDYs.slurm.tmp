#!/bin/bash
####PBS -l mem=115g
#PBS -e ./JOBS/bdys_<XXYEARXX>_<XXVARGRDXX>_interp.err
#PBS -o ./JOBS/bdys_<XXYEARXX>_<XXVARGRDXX>_interp.out
